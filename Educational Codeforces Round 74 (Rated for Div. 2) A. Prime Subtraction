#define fio ios_base::sync_with_stdio(false); cin.tie(0);cout.tie(0);
#define i64 long long int
const double pi = 2*acos(0);
const int maxn = (i64)2e5+5;

int main()
{
    fio;
    int t;
    i64 x,y;
    cin>>t;
    while(t--)
    {
        cin>>x>>y;
