int main(){
    //read;
    fio;
    int t,x,y;
    cin>>t;
    while(t--){
        int n,x;
        cin>>n;
        int odd=0,even=0;
        for(int i=0;i<n;i++){
            cin>>x;
            if(i%2){
                if(x%2==0) odd++;
            }
            else{
                if(x%2==1) even++;
            }
        }
        if(even!=odd) cout<<"-1"<<endl;
        else cout<<even<<endl;
    }

return 0;
}
