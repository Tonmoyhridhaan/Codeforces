int n,m,k,x;
void check0(){
    for(int i=1;i<=m;i++)
        for(int j=i+1;j<=m;j++)
            cout<<i<<" "<<j<<endl;
}
void check1(){
    for(int i=1;i<=m;i++)
        for(int j=i+1;j<=m;j++)
            cout<<j<<" "<<i<<endl;
}
int main(){
    //read;
    fio;
    cin>>n>>m>>k;
    for(int i=0;i<n;i++)
        for(int j=0;j<m;j++)
            cin>>x;
    cout<<((m*(m-1))>>1)<<endl;
    if(k==0) check0();
    else check1();
    return 0;
}
